{
  "name": "daily-spews-backend",
  "version": "1.0.0",
  "description": "Backend API for Daily Spews site",
  "type": "module",
  "main": "src/index.js",
  "scripts": {
    "prepare": "if [ \"$NODE_ENV\" != \"production\" ]; then husky install; fi",
    "setup-dbs": "psql -f ./src/db/setup-dbs.sql",
    "seed-dev": "NODE_ENV=development node ./src/db/seeds/run-seed.js",
    "seed-prod": "NODE_ENV=production node ./src/db/seeds/run-seed.js",
    "start": "node src/index.js",
    "dev": "NODE_ENV=development nodemon src/index.js",
    "test": "NODE_ENV=test node --experimental-vm-modules node_modules/.bin/jest --runInBand",
    "test-seed": "node --experimental-vm-modules node_modules/.bin/jest seed.test.js",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "validate": "npm run lint && npm run format:check && npm test",
    "spam:dev": "node scripts/spamScript.js"
  },
  "comment_spam": "The 'spam' script is for local stress-testing only. Do not run in production.",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kevpstephens/daily-spews-backend.git"
  },
  "keywords": [],
  "author": "kevpstephens <kevpstephenson@gmail.com>",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/kevpstephens/daily-spews-backend/issues"
  },
  "homepage": "https://github.com/kevpstephens/daily-spews-backend#readme",
  "devDependencies": {
    "@babel/core": "^7.28.0",
    "@babel/eslint-parser": "^7.28.0",
    "@eslint/eslintrc": "^3.3.1",
    "@eslint/js": "^9.30.1",
    "eslint": "^8.57.1",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-prettier": "^5.5.1",
    "globals": "^16.3.0",
    "husky": "^8.0.3",
    "jest": "^27.5.1",
    "jest-extended": "^2.0.0",
    "jest-sorted": "^1.0.15",
    "prettier": "^3.6.2",
    "supertest": "^7.1.0"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.50.2",
    "axios": "^1.10.0",
    "bcrypt": "^6.0.0",
    "compression": "^1.8.0",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^16.5.0",
    "express": "^5.1.0",
    "express-rate-limit": "^7.5.1",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.2",
    "multer": "^2.0.1",
    "nodemon": "^3.1.10",
    "pg": "^8.15.6",
    "pg-format": "^1.0.4",
    "uuid": "^11.1.0"
  },
  "jest": {
    "globals": {
      "__esModule": true
    },
    "transform": {},
    "setupFilesAfterEnv": [
      "jest-extended/all",
      "jest-sorted"
    ]
  }
}
